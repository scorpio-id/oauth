    "swagger": "2.0",
    "info": {
        "description": "a Go OAuth2 issuer implementation",
        "title": "Scorpio OAuth",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
